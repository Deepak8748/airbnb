<%- include('../partials/head') %>
<style>
  .submit{
    background-color: rgb(148, 238, 148);
    font-size: 18px;
    border: 2px solid black;
    border-radius: 8px;
    cursor: pointer;
    padding: 3px;
    font-weight: 550;
  }
  .submit:hover{
    background-color: rgb(40, 221, 40) ;
  }
  input{
    font-size: 17px;
    border: 1px solid black;
    border-radius: 5px;
    padding: 5px;
  }
  textarea{
    font-size: 17px;
    border: 1px solid black;
    border-radius: 5px;
    padding: 5px;
  }
  
</style>

<body>
  <%- include('../partials/nav') %>
  <header>
    <h1><%= editing ? "Edit" : "Register" %> Your Home</h1>
  </header>
  <br/>
  <main>
    <form action="/host/<%= editing ? "edit-home" : "add-home" %>" method="POST">
      <input type="hidden" name="id" value="<%= home ? home._id : " " %>" />
      <input type="text" name="HouseName" placeholder="Enter name of your House" value="<%= home ? home.HouseName : " " %>" />
      <br />
      <br />
      <input type="text" name="Price" placeholder="Enter Price Per Night" value="<%= home ? home.Price : " " %>" />
      <br />
      <br />
      <input type="text" name="Location" placeholder="Enter Location of House" value="<%= home ? home.Location : " " %>" />
      <br />
      <br />
      <input type="text" name="Rating" placeholder="Rating of House" value="<%= home ? home.Rating : " " %>" />
      <br />
      <br />
      <input type="text" name="Photo" placeholder="URL of image" value="<%= home ? home.Photo : " " %>" />
      <br />
      <br />
      <textarea name="Description" placeholder="Describe your Home"><%= home ? home.Description : " " %></textarea>
      <br />
      <br />
      <input class="submit" type="submit" value="<%= editing ? "Edit Home" : "Add Home" %>" />
    </form>
  </main>
</body>

</html>